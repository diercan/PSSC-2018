        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="131*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="259*"/>
            <ColumnDefinition Width="258*"/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Left" Height="78" Margin="100,15,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" Height="78" Margin="37,15,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="24" Grid.Column="1"/>
        <Label Content="    Home" HorizontalAlignment="Left" Margin="100,20,0,0"  VerticalAlignment="Top" Height="50" Width="120" FontSize="24" FontWeight="Bold"/>
        <Label Content="    Guest" HorizontalAlignment="Left" Margin="37,20,0,0" VerticalAlignment="Top" Height="50" Width="120" FontSize="24" FontWeight="Bold" Grid.Column="1"/>

    </Grid>
</Window>
